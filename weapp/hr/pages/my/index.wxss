/* pages/my/index.wxss */

.top {
    width: 100%;
    height: 272rpx;
    position: relative;
    z-index: 1;
    background: linear-gradient(0deg, #FAD961 0%, #F76B1C 100%);
    box-sizing: border-box;
    padding: 0 30rpx;
}
.user{
	padding-top: 20rpx;
	height: 252rpx;
	position: relative;
}
.img{
	width: 134rpx;
	height: 134rpx;
	background: rgba(255,255,255,0.73);
	box-sizing: border-box;
	padding: 6rpx;
	border-radius: 50%;
	text-align: center;
	line-height: 118rpx;
}
.my .avatar{
	display: block;
	width: 122rpx ;
	height: 122rpx;
	line-height: 122rpx;
	border-radius: 50%;
	font-size: 50rpx;
	background: #fff;
	position: relative;
}

.my .avatar image{
	width: 124rpx;
	height: 124rpx;
	border-radius: 50%;
	vertical-align: middle;
	float: left;
}
.my .avatar .dafault{
	width: 70rpx;
	height: 72rpx;
	float: none;
}
.get-auth{
	width: 124rpx;
	height: 124rpx;
	position: absolute;
	top: 0;
	opacity: 0;
}

.info{
	width: 516rpx;
	margin-left: 40rpx; 
	box-sizing: border-box;
	padding-top: 16rpx;
}
.name{
	font-size: 38rpx;
	color: #FFFFFF;
	letter-spacing: 0;
	text-align: left;
	line-height: 40rpx;
}
.company{
	width: 516rpx;
	font-size: 28rpx;
	color: #FFFFFF;
	letter-spacing: 0;
	text-align: left;
	line-height: 28rpx;
	margin-top: 30rpx;
	vertical-align: bottom;
}
.company i-icon{
	margin: -1rpx 5rpx 0 0;

}
.company text{
	display: inline-block;
	width: 478rpx;
}
.main{
	position: relative;
	top: -80rpx;
	z-index: 2
}

.data{
	width: 690rpx;
	height: 158rpx;
	background: #fff;
	box-shadow: 0 2rpx 28rpx 0 rgba(255,107,0,0.20);
	border-radius: 24rpx;
	margin: 0 auto 30rpx;
}
/* 数据 */
.col-class{
	text-align: center;
}
.col-title{
	padding-top: 40rpx;
	font-size: 24rpx;
	color: #333;
	line-height: 24rpx;
}
.col-info{
	padding-top: 26rpx;
	font-size: 28rpx;
	color: #666;
	line-height: 28rpx;
}
/* 按钮操作 */
.btns{
	width: 690rpx;
	margin: 0 auto;
	background: #fff;
	box-shadow: 0 2rpx 28rpx 0 rgba(255,107,0,0.20);
	border-radius: 24rpx;
	overflow: hidden;
}
.i-cell-my{
}
.i-cell-my::after{
	content: '';
    position: absolute;
    top: 0;
    left: 20rpx;
    width: 1300rpx;
    height: 200%;
    transform: scale(.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 dashed #e9eaec;
    border-bottom-width: 2rpx;
}
.round-left{
	width: 10rpx;
	height: 20rpx;
	background: rgba(255,107,0,0.10); 
	border-radius: 0rpx 10rpx 10rpx 0;
	position: absolute;
	left: 0;
	top: -10rpx;
}
.round-right{
	width: 10rpx;
	height: 20rpx;
	background: rgba(255,107,0,0.10); 
	border-radius: 10rpx 0 0 10rpx;
	position: absolute;
	right: 0;
	top: -10rpx;
}

.new-eval{
	width: 16rpx;
	height: 16rpx;
	border-radius: 50%;
	background: #ff3d3d;
	position: absolute;
	right: 70rpx;
	top: 50rpx;
}

.work{
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 32rpx;
    letter-spacing: 0;
}
.work .plr{
    padding: 0 30rpx !important;
}
.work .ptb{
    padding: 36rpx 0 !important;
    
}
.work .b-border{
    border-bottom: 1rpx solid #F2F2F2;
}
.work .color666{
    color: #666666;
}
.work .colorred{
    color: #FF3D3D;
}
.work .pt20{
    padding-top: 20rpx;
}

.work .bg-white{
    background: white;
}
.work .bg-yellow{
    background: #FDFCEC;
}

/* header */
.work .header-card{
    padding: 40rpx 0;
}
.work .header-card .info{
    width: 570rpx;
}
.work .header-card .info .title{
    font-size: 40rpx;
    color: #333333;
    line-height: 40rpx;
    margin-bottom: 8rpx;
}
.work .header-card .info .list{
    font-size: 28rpx;
    color: #333333;
}

.work .header-card .logo{
    width: 120rpx;
    padding-left:32rpx; 
    box-sizing: border-box;
}
.work .header-card .logo .size{
    width: 88rpx;
    height: 88rpx;
    border-radius: 88rpx;
    line-height: 88rpx;
    background: #FF8B38;
}

.input{
    text-align: right;
    display: block;
    height:32rpx;
    position: absolute;
    right: 45rpx;
    top: 50%;
    margin-top: -16rpx;
}

.work .content{
    padding-top: 20rpx;
    background: #F5F5F5;
    box-sizing: border-box;
}
.work .content input{
    font-size: 32rpx;
}
.work .col-line{
    height: 32rpx;
    position: relative;
}
.work .col-info{
    padding: 22rpx 30rpx;
}
.work .col-info .pt32{
    padding-top: 32rpx;
}

.work .content .txt{
    width: 100%;
    background: #FFFFFF;
    height: 180rpx;
    font-size: 32rpx;
    padding: 28rpx 30rpx;
    box-sizing: border-box;
}
.work .content .num{
    font-size: 24rpx;
    color: #BBBBBB;
    text-align: right;
    line-height: 24rpx;
    background: #FFFFFF;
    padding: 28rpx 30rpx;
    padding-top: 0;
    box-sizing: border-box;
}


.work .btn{
    width: 690rpx;
    height: 94rpx;
    border-radius: 10rpx;
    line-height: 94rpx;
    background: #FF8B38 !important;
    font-size: 36rpx;
    color: #FFFFFF !important;
    margin: 60rpx 30rpx 60rpx;
}

.work .btn::after{
    border: none
}

.offer-input {
    position: relative;
    top: -10rpx;
}

.holder-money {
    font-size: 32rpx;
    color: #BBBBBB;
    letter-spacing: 0;
    text-align: right;
}
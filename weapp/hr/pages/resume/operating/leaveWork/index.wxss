page {
	height: 100%;
	background: #f5f5f5;
}

.init{
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 32rpx;
    letter-spacing: 0;
}
.init .plr{
    padding: 0 30rpx !important;
    background: #fff;
}
.init .ptb{
    padding: 36rpx 0 !important;
    
}
.init .col-line{
    height: 32rpx;
}

.bottom .inpt {
	position: relative;
	background: #fff;
}

.bottom .inpt .text-area{
	box-sizing: border-box;
	padding: 30rpx 30rpx 60rpx 30rpx;
	width: 100%;
	height: 250rpx;
	border: 1px solid #f2f2f2;
	font-size: 32rpx;
	
}
.bottom .inpt .num {
	position: absolute;
	right: 20rpx;
	bottom: 25rpx;
	font-size: 24rpx;
	color: #BBBBBB;
	text-align: right;
	line-height: 24rpx;
}
.bottom .inpt .place-holder{
	font-size: 32rpx;
	color: #BBBBBB;
	text-align: left;
	line-height: 52rpx;
}

.bottom .b-btn {
	padding: 100rpx 30rpx 0;	
}

.bottom .b-btn .btn{
	background: #FF8B38 !important;
	font-size: 36rpx;
	color: #FFFFFF !important;
}

.bottom .b-btn .btn::after{
	border: none
}

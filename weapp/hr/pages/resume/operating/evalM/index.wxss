.box {
    background: #f5f5f5;    
}

.box .top{}

.box .form-group{
    box-sizing: border-box;
    padding: 50rpx 30rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.form-group > .title {
    font-size: 32rpx;
    color: #333333;
    text-align: left;
    line-height: 52rpx;
    margin-bottom: 50rpx;
}
.form-group .star-item {
    margin-bottom: 30rpx;
}

.form-group .star-item:last-child {
    margin-bottom: 0;
}

.star-item > .name {
    font-size: 32rpx;
    color: #666666;
    line-height: 32rpx;
    margin-right: 40rpx;
}

.star-item > .grade {
   font-size: 28rpx;
   color: #FFB740;
   line-height: 28rpx;
   margin-left: 30rpx;
}

.star-item > .stars {
    display: inline-block;
   position: relative;
   top: -4rpx;
   
}



.box .bottom {
    background: #fff;
}

.bottom .inpt {
    position: relative;
}

.bottom .inpt .text-area{
    box-sizing: border-box;
    padding: 30rpx 30rpx 60rpx 30rpx;
    width: 100%;
    height: 250rpx;
    border: 1px solid #f2f2f2;
    font-size: 32rpx;
}
.bottom .inpt .num {
    position: absolute;
    right: 20rpx;
    bottom: 25rpx;
    font-size: 24rpx;
    color: #BBBBBB;
    text-align: right;
    line-height: 24rpx;
}
.bottom .inpt .place-holder{
    font-size: 32rpx;
    color: #BBBBBB;
    text-align: left;
    line-height: 32rpx;
}

.bottom .b-btn {
    padding: 100rpx 30rpx 0;    
}

.bottom .b-btn .btn{
    background: #FF8B38 !important;
    font-size: 36rpx;
    color: #FFFFFF !important;
}

.bottom .b-btn .btn::after{
    border: none
}
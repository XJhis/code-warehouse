page {
    word-break:break-all; 
}
.eval .lieni-step {
    box-sizing: border-box;
    padding: 30rpx 40rpx;
}

.lieni-step {
    color: #333;
}

.lieni-step .step-item {
    position: relative;
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
}

.lieni-step .step-item:last-child {}

.lieni-step .step-item::before {
    content: " ";
    display: block;
    width: 16rpx;
    height: 16rpx;
    background: #d7d7d7;
    border-radius: 8rpx;
    position: absolute;
    left: -6rpx;
    z-index: 3;
    top: 4rpx;
}

.lieni-step .step-item:first-child::before {
    background: #FF8B38;
}

.lieni-step .step-item::after {
    content: " ";
    display: inline-block;
    height: 100%;
    width: 4rpx;
    background: #f5f5f5;
    position: absolute;
    z-index: 2;
    top: 12rpx;
    left: 0;
}

.lieni-step .step-item:last-child::after {
    height: calc(100% - 50rpx);
}

.step-item .time {
    font-size: 24rpx;
    color: #999999;
    line-height: 24rpx;
    margin-bottom: 20rpx;
}

.step-item .eval-item {
    font-size: 28rpx;
    color: #666;
    line-height: 44rpx;
    display: flex;
    justify-content:center;    
    align-items:center;
}

.eval-item .left {
    flex: 4;
}

.eval-item .right {
    flex: 20;
}

.eval-item .header {
    background: #fff;
    width: 76rpx;
    height: 76rpx;
    font-size: 30rpx;
    line-height: 76rpx;
}




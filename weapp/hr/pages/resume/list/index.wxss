page {
    word-break:break-all; 
}
.resume-top {
    width: 100%;
    height: 280rpx;
    position: relative;
    z-index: 1;
}

.resume-top .bg {
    position: absolute;
    left: 0;
    right: 0; 
    z-index: -1;
    width: 100%;
    height: 280prx;
}

.resume-top .bg image {
    width: 100%;
    height: 280rpx;
}

.resume-top .logo {
    padding:0 55rpx 50rpx;
}

.resume-top .search {
    width: 690rpx;
    height: 80rpx;
    margin: 0 auto;
    box-sizing: border-box;
    background: #FFFFFF;
    border-radius: 100rpx;
    font-size: 28rpx;
    color: #B4B4B4;
    letter-spacing: 0;
    text-align: center;
    line-height: 80rpx;
}
.resume-top .search .icon{
    position: relative;
    top: -3rpx;
}
.resume-top .search text{
    margin-left: 10rpx;
}

.resume-top .logo image {
    width: 182rpx;
    height: 70rpx;
}


.resume-list {
    background: #F6F6F6;
    padding-top: 20rpx;
    overflow: hidden;
}

.resume-list .list-item {
    background: #fff;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
}

.list-item .first,
.list-item .bottom {
    display: flex;
    box-sizing: border-box;
}

.list-item .first .name {
    flex: 150;
    font-size: 34rpx;
    box-sizing: border-box;
}

.list-item .first .job {
    flex: 400;
    font-size: 30rpx;
    padding: 4rpx 0 0 10rpx;
    box-sizing: border-box;
}

.list-item .first .tag {
    flex: 200;
    font-size: 30rpx;
}

.list-item .second {
    font-size: 24rpx;
    color: #999999;
    letter-spacing: 0;
    line-height: 24rpx;
    padding: 22rpx 0;
    box-sizing: border-box;
}

.list-item .second >text {
    float: left;
    display: block;    
    padding: 0 18rpx;
    border-left: 1px solid #f0f0f0;
}

.list-item .second>text:first-child {        
    padding-left: 0;
    border-left: none;
}

.list-item .second >.city-name {        
    max-width: 260rpx;
}

.list-item .bottom .recom-job {
    flex: 540;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    line-height: 28rpx;
}

.list-item .bottom .time {
    flex: 140;
    font-size: 24rpx;
    color: #999999;
    text-align: right;
    line-height: 24rpx;
}
/* 吸顶覆盖默认样式 */
.i-sticky-view{
    width: 100%;
    height: 96rpx;
}
.i-sticky-view .recom-select{
    position: sticky;
    top: 0;
}
.i-sticky-view .i-sticky-fixed{
    position: fixed;
    top: 0;
}

/* 筛选 */
.recom-select {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    box-sizing: border-box;
    width: 100%;
    height: 96rpx;
    background: #fff;
}

.recom-select .item {
    box-sizing: border-box;
    text-align: center;
    width: 188rpx;    
    color: #333333;
    line-height: 96rpx;
    overflow: hidden;
    vertical-align: middle;
    white-space: nowrap;
    text-overflow: ellipsis;
    height: 100%;
}




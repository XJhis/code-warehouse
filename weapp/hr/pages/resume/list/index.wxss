/* 暂无数据 */
.no-data {
	padding: 130rpx 0;
	background: #fff;
}

.no-data image{
	width: 150rpx;
	height: 150rpx;
}

.no-data .text{
	font-size: 30rpx;
	color: #B4B4B4;
	line-height: 30rpx;
}

/* 加载更多 */
.load-more {
    font-size: 28rpx; 
    color: #666; 
    padding: 10rpx 0;
}

/* 提示 */
.tips{
    background: #FDFCEC;
    padding: 18rpx 30rpx;
    font-size: 28rpx;
    color: #F86E21;
    line-height: 36rpx;
}
.tips .phone{
    color: #3F98FC;
}
/* 第一次 */
.first-modal{
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.40);
    position: fixed;
    top: 0;
    display: flex;
    align-items: center;
    z-index: 99
}
.first-modal .modal{
    width: 620rpx;
    background: #FFFFFF;
    border-radius: 14rpx;
    box-sizing: border-box;
    margin: 0 auto;
}
.first-modal .title {
    font-size:36rpx;
    color:#000000;
    text-align:center;
    padding:50rpx 30rpx 30rpx;
}
.first-modal .main{
    text-align: justify;
    padding: 0 60rpx 50rpx;
    font-size: 28rpx;
    line-height: 50rpx;
}
.first-modal .main .phone{
    color: #3F98FC;
}
.first-modal .btns{
    border-top: 2rpx solid #e9eaec;
    height: 90rpx;
    box-sizing: border-box;
}
.first-modal .weixin{
    height: 88rpx;
    background: #fff;
    font-size: 36rpx;
    color: #ff6b00;
    text-align: center;
    line-height: 88rpx;
}
.first-modal .weixin:after {
    border: none
}


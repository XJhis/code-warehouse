/* pages/agreement/index.wxss */
.c-agreement-box {
     padding: 60rpx 32rpx;
}
.c-agreement-box .h2 {
    font-size: 40rpx;
	color: #333333;
	text-align: center;
	margin-bottom: 40rpx;
}

.c-agreement-box .h3 {
    counter-increment: section;
    counter-reset: sub-section;
    font-size: 30rpx;
	line-height: 40rpx;
	color: #FF6B00;
	margin: 20rpx 0;
	
}

.c-agreement-box .h3:before {
    content: counter(section) ".";
}
.c-agreement-box .h4 {
    counter-increment: sub-section;
    counter-reset: sub-sections;
    font-size: 24rpx;
	color: #333333;
	line-height: 42rpx;
    padding-left: 40rpx;
    text-align: justify;
    margin-bottom: 10rpx;
}
.c-agreement-box .h4:before {
    content: counter(section) "." counter(sub-section) " ";
    margin-left: -40rpx;
}
.c-agreement-box .p {
    counter-increment: sub-sections;
    font-size: 24rpx;
    color: #333;
    padding-left: 60rpx;
    line-height: 36rpx;
    margin-bottom: 10rpx;
}
.c-agreement-box .p:before {
    content: "(" counter(sub-sections) ")";
}

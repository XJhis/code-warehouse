/* pages/download/index.wxss */
.download{
	width: 100%;
	height: 100%;
	position: fixed;
}
.download .bg{
	width: 100%;
	height: 100%;
}
.download .main{
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	text-align: center;
}
.download .logo{
	width: 144rpx;
	height: 144rpx;
	display: inline-block;
	margin: 100rpx auto 40rpx;
}
.download .h1{
	font-size: 34rpx;
	color: #333333;
	height: 44rpx;
	line-height: 44rpx;
}
.download .info{
	width: 580rpx;
	height: 280rpx;
	background: rgba(255,255,255,0.70);
	border-radius: 10px;
	margin: 60rpx auto;
}
.download .title{
	font-size: 30rpx;
	color: #000000;
	text-align: center;
	line-height: 30rpx;
	padding: 45rpx 0 50rpx;
}
.download .p{
	font-size: 24rpx;
	color: #404040;
	text-align: center;
	padding-bottom: 30rpx;
}

.download button{
	background-image: linear-gradient(90deg, #FFBF69 0%, #FF6B00 100%);
	border-radius: 44rpx;
	color: #fff;
	width: 460rpx;
	height: 88rpx;
	line-height: 86rpx;
}
.download button::after {
  border: 0;
} 
